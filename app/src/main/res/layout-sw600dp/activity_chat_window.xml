<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androidlabs.ChatWindow">

    <FrameLayout
        android:id="@+id/tabletFrame"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/chatWindow"/>

    <ListView
        android:id="@+id/chatWindow"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/chatSendButton"
        android:layout_alignParentTop="true" />


    <EditText
        android:id="@+id/chatEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/chatSendButton" />

    <Button
        android:id="@+id/chatSendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/chatSendButton"
        android:layout_toLeftOf="@id/tabletFrame"/>

</RelativeLayout>
